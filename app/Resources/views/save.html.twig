<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
</head>

{% block body %}

    {% if app.session.flashBag.has('notice') %}
        <div class="alert alert-warning fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('notice') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('error') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="panel-heading">
        <h3 class="text-center">Add Job Offer</h3>
        <div id="divLogin">
            <section id="content" class="m-t-lg wrapper-md animated fadeInUp">
                <div height="100" width="100">
                </div>
                <div class="container">
                    <br><br><br>
                    <form method="post" name="add" action={{ path('add') }}>
                        <div class="row col-md-4 col-md-offset-4">
                            <input type="text" name="JobName" id="JobName" placeholder="JobName" required="required" class="form-control no-border">
                            <input type="text" name="Domain" id="Domain" placeholder="Domain" required="required" class="form-control no-border">
                            <input type="text" name="CompanyName" id="CompanyName" placeholder="CompanyName" required="required" class="form-control no-border">
                            <input type="text" name="CompanyLocation" id="CompanyLocation" placeholder="CompanyLocation" required="required" class="form-control no-border">
                            <select name="Type" required="required" class="form-control no-border">
                                <option value="Part Time">Part Time</option>
                                <option value="Full Time">Full Time</option>
                            </select>
                            <input type="text" name="Department" id="Department" placeholder="Department" required="required" class="form-control no-border">
                            <input type="text" name="YearsOfExperience" id="YearsOfExperience" placeholder="YearsOfExperience" required="required" class="form-control no-border">
                            <input type="text" name="Skill" id="Skill" placeholder="Skill" required="required" class="form-control no-border">
                            <input type="text" name="Title" id="Title" placeholder="Title" required="required" class="form-control no-border">
                            <input type="text" name="HireRangeMin" id="HireRangeMin" placeholder="HireRangeMin" required="required" class="form-control no-border">
                            <input type="text" name="HireRangeMax" id="HireRangeMax" placeholder="HireRangeMax" required="required" class="form-control no-border">
                            <br/><br/><br/>
                            <button type="submit" class="btn btn-lg btn-primary m-r center-block"> Submit</button>
                        </div>
                        <div class="line line-dashed"></div>
                    </form>
                </div>
            </section>


    </div>
{% endblock %}
{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
{% endblock %}
