{% extends 'base.html.twig' %}


{% block body %}

    {% if app.session.flashBag.has('notice') %}
        <div class="alert alert-warning fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('notice') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    {% if app.session.flashBag.has('error') %}
        <div class="alert alert-danger fade in" role="alert">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('error') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="panel-heading">
        <h4>Available Jobs</h4>
        {% if app.session.get('role') == 'proposer'%}
        <a class=" btn btn-default" href="{{ path('save') }}">Add New Job Offer</a>
        {% endif %}
    </div>
    <div class="table-responsive">
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Name</th>
                <th>Domain</th>
                <th>Company</th>
                <th>Location</th>
                <th>Type</th>
                <th>Department</th>
                <th>No of Candidates</th>
                <th>Monthly Range</th>
            </tr>
            </thead>
                <tbody>
                {% if (jobs) %}
                {% for job in jobs %}
                    {% if job.nocandidates > 50 %}
                        <tr bgcolor="#90ee90">
                    {% else %}
                        <tr>
                    {% endif %}
                        <td>{{ job.name }}</td>
                        <td>{{ job.domain }}</td>
                        <td>{{ job.company.name }}</td>
                        <td>{{ job.company.location }}</td>
                        <td>{{ job.type }}</td>
                        <td>{{ job.department }}</td>
                        <td>{{ job.nocandidates }}</td>
                        <td>{{ job.monthlyrange }}</td>
                    </tr>
                {% endfor %}
                {% endif %}
                </tbody>
            </table>
        <div class="panel-heading">
            <h4>Statistics</h4>
            <h5>Hard Jobs</h5>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover table-condensed">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Domain</th>
                    <th>Company</th>
                    <th>Location</th>
                    <th>Type</th>
                    <th>Department</th>
                    <th>No of Candidates</th>
                    <th>Monthly Range</th>
                </tr>
                </thead>
                <tbody>
                {% if (hardJobs) %}
                    {% for hardJob in hardJobs %}
                        <tr>
                            <td>{{ hardJob.name }}</td>
                            <td>{{ hardJob.domain }}</td>
                            <td>{{ hardJob.company.name }}</td>
                            <td>{{ hardJob.company.location }}</td>
                            <td>{{ hardJob.type }}</td>
                            <td>{{ hardJob.department }}</td>
                            <td>{{ hardJob.nocandidates }}</td>
                            <td>{{ hardJob.monthlyrange }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
            <div class="panel-heading">
                <h5>Avg Jobs Per Day: {{ avg }}</h5>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
{% endblock %}
